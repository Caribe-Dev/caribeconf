---
interface Props {
  id?: string
	class?: string
}

const { id, class: className  } = Astro.props
---
<div id={id} class:list={['defumed-banner', className]}>
  <slot />
</div>



<style>
  .defumed-banner {
    @apply relative bg-[#1F183C] rounded-[20px];
    box-shadow: 0px 0px 20px 0px rgba(226,73,231,1);
  }

  .defumed-banner::after {
    content: "";
    position: absolute;
    inset: -1px;
    background: linear-gradient(180deg, #BE357F 40%, #41DEF4 100%);
    border-radius: inherit;
    z-index: -1;
  }
</style>