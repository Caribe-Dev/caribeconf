---
import { Image } from 'astro:assets';

interface Props {
	class?: string
	tumbnail: string
	image: string
  name: string
  role?: string
  country?: string
	alt: string
}

const { class: className, name, role, country, tumbnail, image, alt  } = Astro.props

---
<div
  class:list={['speaker-card', className]}
  data-speaker-name={name}
  data-speaker-role={role}
  data-speaker-country={country}
  data-speaker-image={image}
>
  <Image
    class='w-full'
    src={tumbnail}
    alt={alt}
    inferSize={true}
    loading='eager'
  />
</div>

<style>
  .speaker-card {
    @apply max-w-[150px] cursor-pointer w-full grayscale aspect-[1] object-cover opacity-80 transition-[transform,opacity];
    mask-image: linear-gradient(#000 85%, #0000 100%);
  }

  .speaker-card.active {
    @apply opacity-100 scale-[1.05] grayscale-0;
  }
</style>