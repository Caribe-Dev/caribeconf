---
import GroundSvg from "@/components/Svgs/Ground.astro";
import { volunteers } from "@/utils/constants";
---

<section id="volunteer" class="mx-auto relative">
  <div class="relative h-[70px] sm:h-[100px] md:h-[160px] mx-auto">
    <div
      class="absolute top-0 translate-y-[-10px] left-0 right-0 w-full z-[4] mx-auto rotate-180"
    >
      <GroundSvg
        class="h-full w-full"
        fill="#1F183C"
        width={null}
        height={null}
      />
    </div>
  </div>
  <div class="max-w-5xl mx-auto px-4 text-center flex flex-col gap-24">
    <h2 class="text-left">Voluntarios</h2>

    <div class="flex flex-col gap-10">
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8"
      >
        {
          volunteers.map(({ name, photo }) => (
            <div class="flex flex-col items-center">
              <img
                src={photo}
                alt={`photo de ${name}`}
                class="w-32 h-32 object-cover rounded-full shadow-md mb-4"
              />
              <span>{name}</span>
            </div>
          ))
        }
      </div>
      <span> Gracias a este incre√≠ble equipo, CaribeConf fue posible </span>
    </div>
  </div>
  <div class="relative h-[70px] sm:h-[100px] md:h-[160px] mx-auto">
    <div
      class="absolute bottom-0 translate-y-[10px] left-0 right-0 w-full mx-auto"
    >
      <GroundSvg
        class="h-full w-full"
        fill="#1F183C"
        width={null}
        height={null}
      />
    </div>
  </div>
</section>
