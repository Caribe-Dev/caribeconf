---
import { ClientRouter, fade, slide } from 'astro:transitions';

import Header from '@/sections/Header.astro'
import Footer from '@/sections/Footer.astro'

import '@/styles/settings/typography.css'
import '@/styles/global.css'
import '@/styles/helpers/buttons.css'
import '@/styles/helpers/fonts.css'


interface Props {
  title?: string
}

const title = Astro.props.title
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="robots" content="NOINDEX, NOFOLLOW">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>
      {
        title
          ? title + ' | Caribe Conf 2025'
          : 'Caribe Conf - Conferencia de Comunidades Tech en Barranquilla, Colombia (26 de Abril 2025)'
      }
    </title>
    <meta
      name="description"
      content="Únete a CaribeConf Barranquilla, Colombia 2025, la conferencia más importante sobre JavaScript en Barranquilla, el 26 de Abril 2025. ¡Ven no te lo pierdas y reserva tu entrada ahora!"
    />
    <meta
      name="keywords"
      content="Caribe Dev, CaribeDev, Caribe Conf, CaribeConf. JavaScript, Colombia, Barranquilla, Conferencias, Programación, Comunidades Tech"
    />
    <meta name="robots" content="index, follow" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="canonical" href="https://caribeconf.com" />

    <meta property="og:image" content="https://caribeconf.com/og.jpg" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:title" content="CaribeConf Barranquilla, Colombia 2025" />
    <meta
      property="og:description"
      content="Conferencia de Comunidades Tech en Barranquilla, Colombia (26 de Abril 2025)"
    />
    <meta property="og:url" content="https://caribeconf.com" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@caribedev" />
    <meta name="twitter:creator" content="@caribedev" />
    <meta name="twitter:title" content="CaribeConf Barranquilla, Colombia 2025" />
    <meta
      name="twitter:description"
      content="Conferencia de Comunidades Tech en Barranquilla, Colombia (26 de Abril 2025)"
    />
    <meta name="twitter:image" content="https://caribeconf.com/og.jpg" />

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Event",
        "name": "CaribeConf Barranquilla, Colombia 2025",
        "startDate": "2025-04-26",
        "endDate": "2025-04-26",
        "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
        "eventStatus": "https://schema.org/EventScheduled",
        "location": {
          "@type": "Place",
          "name": "CaribeConf Barranquilla, Colombia 2025",
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "Calle 58 # 54-59",
            "addressLocality": "Barranquilla",
            "postalCode": "080002",
            "addressCountry": "ES"
          }
        },
        "image": "https://caribeconf.com/og.jpg",
        "description": "Conferencia de Comunidades Tech en Barranquilla, Colombia (26 de Abril 2025)",
        "organizer": {
          "@type": "Organization",
          "name": "CaribeConf Barranquilla, Colombia 2025",
          "url": "https://caribeconf.com"
        }
      }
    </script>
    <ClientRouter />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
